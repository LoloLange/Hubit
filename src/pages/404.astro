---
import Header from "../components/Header.astro";
import Layout from "../layouts/Layout.astro";
---
<Layout>
    <section class="flex flex-col items-center py-10 lg:py-20 font-inter">
        <p class="text-3xl font-bold mt-3" data-aos="fade-up" data-aos-delay="500">Page not found</p>
